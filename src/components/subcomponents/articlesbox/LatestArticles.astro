---
import Article from '../article/Article.astro';
import { getCollection } from 'astro:content';
import type {CollectionEntry} from 'astro:content';
import {LATEST_ARTICLE_LIMIT} from '../../../constants';

let articles :CollectionEntry<"blogs">[] = await getCollection("blogs");
articles = articles.filter(article => {
  return !article.data.draft;
}).slice(0, LATEST_ARTICLE_LIMIT);
---

<div class="w-[70%] border-t-2 border-r-2 border-blue-300 p-[3rem] ">
  <!--<h1 class="text-[2rem] font-bold mb-[1rem] relative inline-block group">-->
  <!--  <span class="relative z-10">Latest Articles</span>-->
  <!--  <span-->
  <!--    class="absolute bottom-0 left-0 w-0 h-5 bg-blue-100 z-[-1] transition-all duration-300 group-hover:w-full"-->
  <!--  ></span>-->
  <!--</h1>-->
  <div class="grid grid-rows-1 gap-[1rem] place-items-center">
    {
      // TODO: make the center of the articles constant - by using grid-cols-1
      articles.map((article) => {
        return (
          <Article article={article} />
        );
      })
    }
  </div>
</div>
