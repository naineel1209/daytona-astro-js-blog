---
import slugify from "slugify";

const { as: Component, text } = Astro.props;

const slugified = slugify(text, {
  lower: true,
  locale: "en",
  strict: true,
  remove: /[*+~.()'"!:@]/g,
  replacement: "-",
});
---

<Component id={slugified}>
  <div class="flex items-center gap-[.5rem]">
    <a href={`${Astro.url.href}#${slugified}`}>
      <i class="bx bx-link bx-flip-horizontal text-md"></i>
    </a>
    <slot />
  </div>
</Component>

<style>
  h2,
  h3,
  h4,
  h5,
  h6 {
    color: red;
  }

  a {
    color: rgba(59, 130, 246);
  }
</style>
