---
import AuthorBanner from "../../components/subcomponents/author-utils/AuthorBanner.astro";
import HighlightedHeading from "../../components/utils/HighlightedHeading.astro";
import { getSanityAuthors } from "../../data/authors";
import MainLayout from "../../layouts/MainLayout.astro";

const authors = await getSanityAuthors();
---

<MainLayout title="Authors">
  <div class="authors-container">
    <HighlightedHeading title="Our Stellar Authors" />
    <div class="authors-grid">
      {authors.map((author) => <AuthorBanner author={author} />)}
    </div>
  </div>
</MainLayout>

<style>
  .authors-container {
    background-color: #ffffff;
    min-height: 100vh;
    padding: 2rem;
  }

  :global(.highlighted-heading) {
    font-size: 3.5rem;
    text-align: center;
    margin-bottom: 3rem;
    color: #000000;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    animation: pulse 2s infinite;
  }

  .authors-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    justify-items: center;

    padding-top: 2rem;
  }

  @keyframes pulse {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
    100% {
      transform: scale(1);
    }
  }

  @media (max-width: 768px) {
    .authors-container {
      padding: 2rem 1rem;
    }

    :global(.highlighted-heading) {
      font-size: 2.5rem;
    }
  }
</style>

<style is:global>
  /* Styles for AuthorBanner component */
  .author-banner {
    width: 100%;
    max-width: 400px;
    border: 2px solid #e0e0e0;
    border-radius: 15px;
    overflow: hidden;
    transition: all 0.3s ease;
    background-color: #ffffff;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .author-banner:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
  }

  .author-banner .image-container {
    position: relative;
    height: 200px;
    overflow: hidden;
  }

  .author-banner img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .author-banner:hover img {
    transform: scale(1.1);
  }

  .author-banner .content {
    padding: 1.5rem;
  }

  .author-banner a {
    font-size: 1.5rem;
    font-weight: 600;
    color: #2c3e50;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .author-banner a:hover {
    color: #3498db;
  }

  .author-banner p {
    margin-top: 0.5rem;
    font-size: 1rem;
    color: #7f8c8d;
  }
</style>
