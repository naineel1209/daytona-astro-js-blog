---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title={`404 - ${Astro.url.pathname}  - Not Found`}>
  <div
    class="flex flex-col items-center justify-center h-[80vh] bg-gradient-to-r from-slate-700 to-slate-900 rounded-md text-white text-center p-10 shadow-lg"
  >
    <h1 class="text-4xl font-bold">404 - Page Not Found</h1>
    <p class="text-lg mt-4">The page you are looking for does not exist.</p>
  </div>
</MainLayout>
